<Window x:Class="AakStudio.Shell.UI.Showcase.Views.InputFileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input File Name" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Enter file name:" Margin="0,0,0,10"/>
        <TextBox Name="FileNameTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OnOkButtonClick"/>
            <Button Content="Cancel" Width="75" Click="OnCancelButtonClick"/>
        </StackPanel>
    </StackPanel>
</Window>