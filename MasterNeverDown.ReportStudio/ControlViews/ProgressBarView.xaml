<UserControl
    x:Class="AakStudio.Shell.UI.Showcase.ControlViews.ProgressBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UniformGrid>
        <StackPanel Margin="15">
            <TextBlock
                FontSize="24"
                FontWeight="Light"
                Text="Default ProgressBar" />
            <ProgressBar
                Width="230"
                Height="20"
                Margin="0,15,0,0"
                HorizontalAlignment="Left"
                Value="34" />
            <TextBlock
                Margin="0,15,0,0"
                FontSize="24"
                FontWeight="Light"
                Text="Indeterminate" />
            <ProgressBar
                Width="230"
                Height="20"
                Margin="0,15,0,0"
                HorizontalAlignment="Left"
                IsIndeterminate="True" />
        </StackPanel>
    </UniformGrid>
</UserControl>
