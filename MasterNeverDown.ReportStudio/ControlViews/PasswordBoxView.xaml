<UserControl
    x:Class="AakStudio.Shell.UI.Showcase.ControlViews.PasswordBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AakStudio.Shell.UI.Showcase.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UniformGrid HorizontalAlignment="Left">
        <StackPanel Margin="15">
            <TextBlock
                FontSize="24"
                FontWeight="Light"
                Text="Default PasswordBox" />
            <PasswordBox
                Width="250"
                Margin="0,15,0,0"
                HorizontalAlignment="Left" />
            <TextBlock
                Margin="0,15,0,0"
                FontSize="24"
                FontWeight="Light"
                Text="Disabled" />
            <PasswordBox
                Width="250"
                Margin="0,15,0,0"
                HorizontalAlignment="Left"
                IsEnabled="False" />
        </StackPanel>
    </UniformGrid>
</UserControl>
